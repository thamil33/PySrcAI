{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RAG Agent Configuration Schema",
  "type": "object",
  "properties": {
    "models": {
      "type": "object",
      "properties": {
        "language_model": { "type": "string" }
      },
      "required": ["language_model"]
    },
    "embedding": {
      "type": "object",
      "properties": {
        "provider": { "type": "string", "enum": ["local_sentencetransformers", "huggingface_api"] },
        "model": { "type": "string" },
        "device": { "type": "string", "enum": ["cpu", "cuda"] },
        "local_files_only": { "type": "boolean" },
        "cache_folder": { "type": ["string", "null"] },
        "fallback_models": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["provider", "model", "device", "local_files_only", "fallback_models"]
    },
    "vector_db": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["chromadb"] },
        "persist_directory": { "type": "string" },
        "collection_name": { "type": "string" },
        "settings": {
          "type": "object",
          "properties": {
            "anonymized_telemetry": { "type": "boolean" },
            "hnsw_space": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "required": ["type", "persist_directory", "collection_name"]
    },
    "chunking": {
      "type": "object",
      "properties": {
        "json_strategy": { "type": "string" },
        "text_strategy": { "type": "string" },
        "chunk_size": { "type": "integer" },
        "overlap": { "type": "integer" }
      },
      "required": ["json_strategy", "text_strategy", "chunk_size", "overlap"]
    },
    "rag": {
      "type": "object",
      "properties": {
        "top_k": { "type": "integer" },
        "similarity_threshold": { "type": "number" },
        "enable_reranking": { "type": "boolean" }
      },
      "required": ["top_k", "similarity_threshold", "enable_reranking"]
    },
    "openrouter": {
      "type": "object",
      "properties": {
        "api_key_env": { "type": "string" },
        "base_url": { "type": "string" },
        "model_kwargs": {
          "type": "object",
          "properties": {
            "temperature": { "type": "number" },
            "max_tokens": { "type": "integer" }
          },
          "additionalProperties": true
        }
      },
      "required": ["api_key_env", "base_url", "model_kwargs"]
    },
    "agent": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "system_prompt": { "type": "string" },
        "data_sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "type": { "type": "string" }
            },
            "required": ["path", "type"]
          }
        }
      },
      "required": ["name", "system_prompt", "data_sources"]
    },
    "data_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "type": { "type": "string" }
        },
        "required": ["path", "type"]
      }
    }
  },
  "required": ["models", "embedding", "vector_db", "chunking", "rag"],
  "additionalProperties": true
}
